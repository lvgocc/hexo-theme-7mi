<div id="article-banner">
    <h2>亦或繁星、亦或尘埃。不要抱怨，坚持下去</h2>
    <p class="post-date"><%= theme.description%></p>
</div>
<main class="app-body">
    <div class="index-posts">
        <% page.posts.each(function(post) { %>
            <article class="article-card">
                <h2 class="article-head">
                    <a href="<%- url_for(post.path) %>"><%- post.title %></a>
                </h2>
                <div class="article-summary">
                    <% if (post.excerpt) { %>
                        <%- post.excerpt %>
                    <% } else { %>
                        <%- truncate(strip_html(post.content), { length: 150, omission: ' ...' }) %>
                    <% } %>
                </div>
                <span class="article-date"><%- date(post.date, "LL") %></span>
                <% if (post.tags && post.tags.length) { %>
                    <%- partial('_partial/tag', { tags: post.tags }) %>
                <% } %>
                <a class="more" href="<%- url_for(post.path) %>"><%- theme.excerpt_link %></a>
            </article>
        <% }) %>

        <% if (page.total > 1){ %>
            <%- partial('_partial/pager') %>
        <% } %>
    </div>
    <div align="center" class="index-right">
        <%- partial('_partial/indexright') %>
    </div>
</main>
<script>
    (function () {
        <!--var url = '<%= config.url %>/<%= page.path %>'-->
        $('#article-banner').geopattern('lvgo' + Math.random())
        $('.header').removeClass('fixed-header')
    })();
</script>


