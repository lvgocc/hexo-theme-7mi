#archives

.time-section
  .section-year
    cursor: pointer
    font-size: 1.8em
    clear both

  .section-list
    clear both

    // 归档页版式调整
    .section-list-item
      margin: 10px 12px
      font-size 12px
      width 47%
      float left

      .archive-title
        color: color-orange
        transition: all .3s ease
        font-size: 1.1em

        &:hover
          color: color-primary
          padding-left: 10px
          padding-right 0