#tag-cloud
  margin: 30px 0
  text-align: center
  a
    border: none
    line-height: 28px
    margin: 0 4px
    margin-bottom: 8px
    background: #63a35c
    display: inline-block
    border-radius: 4px
    padding: 0 10px
    color: color-white
    transition: background .5s
    &:hover
      background: rgb(0, 133, 161)
  .tag0
    background: #bbe
  .tag1
    background: #9cb2e1
  .tag2
    background-color: rgba(0, 133, 161, 0.8)

.tag-list
  clear both
  margin-left: 1em
  margin-right: 1em

.tag-name
  font-size: 1.4em
  position: relative
  &:before
    content: "#"
    color: color-primary
    position: absolute;
    left: -.7em
    top: -2px
    font-size: 1.2em
    font-weight: 700
    
.tag-preview
  font-size: 1.0em
  padding-left: 1em
  width 48%
  float left
  @media m-pad
   width 100%
   float none
  li
    cursor: pointer
    margin: 10px 0
    a
      &:hover
        color: color-red
  &:hover
    color: color-red